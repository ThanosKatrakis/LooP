                    date.push(months[d[i].date - 1]);
                    postCount.push(d[i].count);
                }
                var myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: date,
                        datasets: [{
                            label: '# of Posts Per Month',
                            data: postCount,
                            backgroundColor: [
