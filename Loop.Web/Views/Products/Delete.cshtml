@model Loop.Entities.Concrete.Product

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/vendor/secondary/main.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/secondary/style.css" rel="stylesheet" />
    <link href="~/content/vendor/secondary/color.css" rel="stylesheet" />
    <link href="~/content/vendor/secondary/responsive.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="delete-product">
        <h2>Are you sure you want to delete this?</h2>
        <div class="dl-horizontal">
            <h4>Product</h4>
            <h5>
                @Html.DisplayNameFor(model => model.Title)
            </h5>
            <br />
            <p>
                @Html.DisplayFor(model => model.Title)
            </p>
            <br />
            <h5>
                @Html.DisplayNameFor(model => model.Description)
            </h5>
            <br />
            <p>
                @Html.DisplayFor(model => model.Description)
            </p>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-group" style="display:inline-block">
                    <button type="submit" value="Delete" class="btn btn-sm btn-warning text-white"> Delete</button>
                </div>
                <div class="form-group" style="display:inline-block">
                    <div id="back-button">@Html.ActionLink("Back", "Index", null, new { @class = " btn btn-sm" })</div>
                </div>
            }
        </div>
    </div>
</body>
</html>

