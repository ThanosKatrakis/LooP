@model IEnumerable<Loop.Entities.Post>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="theme-layout">
    <section>
        <div class="gap gray-bg">
            <div class="container">
                <div class="row merged20">
                    <div class="col-lg-12">
                        <div class="central-meta">
                            <div class="forum-open">
                                <h5 class=""><i class="fa fa-star"></i> Asset for creating a beautiful website</h5>
                                <table class="table table-responsive">
                                    <thead>
                                        <tr>
                                            <th>Author</th>
                                            <th>Post Title</th>
                                            <th>Posts</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model)
                                        {
                                            <tr>
                                                <td class="topic-data">
                                                    @if (!(post.ApplicationUserId is null))
                                                    {
                                                        <span>@post.ApplicationUser.UserName</span>
                                                        foreach (var image in post.ApplicationUser.Images)
                                                        {
                                                            <img src="@Url.Content(image.ImgPath) " width="100" height="100" />

                                                        }
                                                    }

                                                    <em>Posted : @post.PostDate.ToShortDateString()</em>
                                                </td>
                                                <td class="date-n-reply">
                                                    <span>@post.Title</span>
                                                    <a href="#" title="">Reply</a>
                                                </td>
                                                <td class="topic-detail">
                                                    @Html.ActionLink(@post.Text, "Details", new { id = post.PostId })
                                                </td>
                                                @foreach (var tag in post.Tags)
                                                {
                                                    <td class="topic-detail">
                                                        <img src="@tag.ImageUrl" class="img-fluid" width="30" height="30" />
                                                    </td>
                                                }

                                                <td>
                                                    <div class="option-list">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                        <ul>
                                                            <li><i class="fa fa-pencil-square-o"></i>@Html.ActionLink("Edit", "Edit", new { id = post.PostId }, new { onclick = "return confirm('Are you sure you wish to edit this product?');" })</li>
                                                            <li><i class="fa fa-trash-o"></i>@Html.ActionLink("Delete", "Delete", new { id = post.PostId }, new { onclick = "return confirm('Are you sure you wish to delete this product?');" }) </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>